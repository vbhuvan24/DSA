#include <iostream>
#include <cstdio>
using namespace std;

void rversearray(int arr[], int start, int end)
{
    while (start < end)
    {
        int temp = arr[start];
        arr[start] = arr[end];
        arr[end] = temp;
        start++;
        end--;
    }
}

void printArray(int arr[], int size)
{
    for (int i = 0; i < size; i++)
        cout << endl;
}

int main()
{

    int arr[] = {1, 2, 3, 4, 5, 6};
    int n = sizeof(arr) / size(arr[0]);

    printArray(arr, n);

    rversearray(arr, 0, n - 1);

    cout << "Reversed Array is" << endl;
    printArray(arr, n);
    return 0;
}
